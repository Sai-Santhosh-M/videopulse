<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>YouTube Analyzer</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
* {
  box-sizing: border-box;
  font-family: "Segoe UI", system-ui;
}

body {
  margin: 0;
  background: radial-gradient(circle at top, #1a1f2b, #05070c);
  color: #eaeaea;
}

/* HEADER */
.header {
  text-align: center;
  padding: 70px 20px 30px;
}
.header h1 {
  font-size: 52px;
}
.header h1 span {
  color: #ff7a2f;
}
.header p {
  color: #9aa4b2;
}

/* INPUT */
.input-row {
  max-width: 1100px;
  margin: 30px auto;
  display: flex;
  gap: 16px;
  padding: 0 20px;
}
.input-row input {
  flex: 1;
  padding: 18px;
  border-radius: 16px;
  border: 1px solid #2b3245;
  background: #0f1422;
  color: white;
}
.input-row button {
  padding: 18px 30px;
  border-radius: 16px;
  border: none;
  background: linear-gradient(135deg, #ff7a2f, #ff9a4d);
  font-weight: 700;
  cursor: pointer;
}

/* TABS */
.tabs-wrapper {
  display: flex;
  justify-content: center;
  margin: 30px 0;
}
.tabs-pill {
  background: #0f1422;
  padding: 6px;
  border-radius: 18px;
  display: flex;
  gap: 6px;
}
.tab-btn {
  padding: 12px 26px;
  border-radius: 14px;
  cursor: pointer;
  color: #9aa4b2;
  font-weight: 600;
}
.tab-btn.active {
  background: linear-gradient(135deg, #ff7a2f, #ff9a4d);
  color: #000;
}

/* RESULT AREA */
#result-area {
  max-width: 1200px;
  margin: 0 auto 80px;
  padding: 0 20px;
}

/* STATUS BOX */
.status-box {
  background: #0f1422;
  border-radius: 22px;
  padding: 50px;
  text-align: center;
}

/* LOADER */
.spinner {
  width: 46px;
  height: 46px;
  border: 4px solid #2b3245;
  border-top: 4px solid #ff7a2f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 16px;
}
@keyframes spin {
  to { transform: rotate(360deg); }
}

/* CONTENT */
.content {
  margin-top: 20px;
}
.section {
  background: #0f1422;
  border-radius: 22px;
  padding: 24px;
}
.summary-text {
  line-height: 1.7;
  color: #cfd6e1;
}

/* COMMENT ANALYSIS CARDS */
.analysis-grid {
  display: grid;
  grid-template-columns: 1.2fr 1fr 1fr 1fr;
  gap: 20px;
  margin-bottom: 30px;
}

.analysis-card {
  background: #1a1f33;
  border-radius: 22px;
  padding: 24px;
}

.analysis-card h4 {
  margin: 0 0 16px;
}

.analysis-card .count {
  font-size: 36px;
  font-weight: 700;
}

.analysis-card .percent {
  font-size: 22px;
  font-weight: 600;
}

.progress-bar {
  height: 4px;
  background: #2b3245;
  border-radius: 4px;
  margin-top: 14px;
}
.progress-bar span {
  display: block;
  height: 100%;
}

.total {
  background: #1a1f33;
  border-left: 4px solid #b084ff; /* soft accent */
}

.positive-card { border-left: 4px solid #2ecc71; }
.positive-card span { background: #2ecc71; }

.negative-card { border-left: 4px solid #e74c3c; }
.negative-card span { background: #e74c3c; }

.neutral-card {
  border-left: 4px solid #f1c40f;
}
.neutral-card span { background: #f1c40f; }

/* COMMENT BOXES */
.comments-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 22px;
}

.comment-section {
  background: #151b2e;
  border-radius: 20px;
  padding: 18px;
  height: 420px;
  display: flex;
  flex-direction: column;
}

.neutral-box {
  grid-column: span 2;
}

.comment-scroll {
  overflow-y: auto;
  margin-top: 12px;
  padding-right: 6px;
}

.comment {
  background: #0f1422;
  padding: 14px;
  border-radius: 14px;
  margin-bottom: 12px;
  border-left: 5px solid transparent;
}

.positive { border-color: #2ecc71; }
.negative { border-color: #e74c3c; }
.neutral  { border-color: #f1c40f; }

@media (max-width: 900px) {
  .analysis-grid,
  .comments-layout {
    grid-template-columns: 1fr;
  }
  .neutral-card,
  .neutral-box {
    grid-column: span 1;
  }
}
</style>
</head>

<body>

<div class="header">
  <h1>Analyze Any <span>YouTube Video</span></h1>
  <p>Get AI-powered summaries and comment sentiment analysis.</p>
</div>

<form method="POST" action="/" onsubmit="startAnalysis()">
  <div class="input-row">
    <input name="videoUrl" required placeholder="Paste your YouTube video link here...">
    <button type="submit">Analyze</button>
  </div>
</form>

<div class="tabs-wrapper">
  <div class="tabs-pill">
    <div class="tab-btn active" onclick="switchTab('summary')">üìÑ Summarize</div>
    <div class="tab-btn" onclick="switchTab('comments')">üí¨ Comments</div>
  </div>
</div>

<div id="result-area">

<% if (uiState === 'ready') { %>
  <div class="status-box" id="ready">
    üéØ <strong>Ready to Analyze</strong>
    <p style="color:#9aa4b2">Enter a YouTube URL to start analysis</p>
  </div>
<% } %>

<div class="status-box" id="loading" style="display:none">
  <div class="spinner"></div>
  <strong>Running Complete Analysis...</strong>
  <p style="color:#9aa4b2">This may take a few moments</p>
</div>

<% if (sentimentData) {
  const total = comments.length;
  const pos = comments.filter(c => c.sentiment === 'Positive');
  const neg = comments.filter(c => c.sentiment === 'Negative');
  const neu = comments.filter(c => c.sentiment === 'Neutral');
  const posPct = total ? ((pos.length / total) * 100).toFixed(2) : 0;
  const negPct = total ? ((neg.length / total) * 100).toFixed(2) : 0;
  const neuPct = total ? ((neu.length / total) * 100).toFixed(2) : 0;
%>

<div class="content" id="content">

  <!-- SUMMARY -->
  <div class="section tab-content" id="summary">
    <h2>Video Summary</h2>
    <p class="summary-text"><%= transcript %></p>
  </div>

  <!-- COMMENTS -->
  <div class="section tab-content" id="comments" style="display:none">

    <div class="analysis-grid">
      <div class="analysis-card total">
        <h4>Total Comments Analyzed</h4>
        <div class="count"><%= total %></div>
      </div>

      <div class="analysis-card positive-card">
        <h4>üëç Positive</h4>
        <div class="count"><%= pos.length %></div>
        <div class="percent"><%= posPct %>%</div>
        <div class="progress-bar"><span style="width:<%= posPct %>%"></span></div>
      </div>

      <div class="analysis-card negative-card">
        <h4>üëé Negative</h4>
        <div class="count"><%= neg.length %></div>
        <div class="percent"><%= negPct %>%</div>
        <div class="progress-bar"><span style="width:<%= negPct %>%"></span></div>
      </div>

      <div class="analysis-card neutral-card">
        <h4>üòê Neutral</h4>
        <div class="count"><%= neu.length %></div>
        <div class="percent"><%= neuPct %>%</div>
        <div class="progress-bar"><span style="width:<%= neuPct %>%"></span></div>
      </div>
    </div>

    <div class="comments-layout">
      <div class="comment-section">
        <h3>üëç Positive</h3>
        <div class="comment-scroll">
          <% pos.forEach(c => { %>
            <div class="comment positive"><%= c.comment %></div>
          <% }) %>
        </div>
      </div>

      <div class="comment-section">
        <h3>üëé Negative</h3>
        <div class="comment-scroll">
          <% neg.forEach(c => { %>
            <div class="comment negative"><%= c.comment %></div>
          <% }) %>
        </div>
      </div>

      <div class="comment-section neutral-box">
        <h3>üòê Neutral</h3>
        <div class="comment-scroll">
          <% neu.forEach(c => { %>
            <div class="comment neutral"><%= c.comment %></div>
          <% }) %>
        </div>
      </div>
    </div>

  </div>
</div>

<% } %>

</div>

<script>
function startAnalysis() {
  const ready = document.getElementById("ready");
  const loading = document.getElementById("loading");
  if (ready) ready.style.display = "none";
  if (loading) loading.style.display = "block";
}

function switchTab(tab) {
  document.querySelectorAll(".tab-btn").forEach(b => b.classList.remove("active"));
  document.querySelectorAll(".tab-content").forEach(c => c.style.display = "none");
  document.getElementById(tab).style.display = "block";
}
</script>

</body>
</html>